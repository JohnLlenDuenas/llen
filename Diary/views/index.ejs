<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diary Entries</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Diary Entries</h1>
        <a class="btn" href="/new">Create New Entry</a>
        
        <% diaries.forEach(diary => { %>
            <div class="diary-entry">
                <h2><a href="/edit/<%= diary._id %>"><%= diary.title %></a></h2>
                <p class="date"><%= new Date(diary.date).toLocaleString() %></p>
                <div class="actions">
                    <a class="btn" href="/edit/<%= diary._id %>">Edit</a>
                    <form action="/delete/<%= diary._id %>" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                    <form action="/duplicate/<%= diary._id %>" method="post" style="display:inline;">
                        <button type="submit">Duplicate</button>
                    </form>
                </div>
            </div>
        <% }); %>

        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/?page=<%= currentPage - 1 %>">Previous</a>
            <% } %>
            Page <%= currentPage %> of <%= totalPages %>
            <% if (currentPage < totalPages) { %>
                <a href="/?page=<%= currentPage + 1 %>">Next</a>
            <% } %>
        </div>
    </div>
</body>
</html>
